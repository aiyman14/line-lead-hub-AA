{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Production Portal",
  "version": "1.0.39",
  "identifier": "com.woventex.productionportal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:8082",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Production Portal",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "focus": true,
        "transparent": false,
        "maximized": false,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Business",
    "shortDescription": "Production Portal",
    "longDescription": "Enterprise-grade factory production tracking and management platform",
    "copyright": "Â© 2024 Production Portal",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "hardenedRuntime": true,
      "entitlements": "src-tauri/entitlements.plist",
      "dmg": {
        "background": "dmg-background.png",
        "appPosition": {
          "x": 180,
          "y": 320
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 320
        },
        "windowSize": {
          "width": 660,
          "height": 500
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/WovenTexLTD/line-lead-hub/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDExQTU4RkFGNzRCMzRCRTcKUldUblM3TjByNCtsRVROVjUrTTEza28zdjZ1Y3lYTnI5dGpSY1cvMGg4WGp2dGRBdjFRb3FyQzYK"
    },
    "shell": {
      "open": true
    }
  }
}
